{
  "$schema": "https://1c-syntax.github.io/bsl-language-server/configuration/schema.json",
  "language": "ru",
  "diagnostics": {
    "computeTrigger": "onType",
    "parameters": {
      "LineLength": {
        "maxLineLength": 300
      },
      "MethodSize": false,
      "CyclomaticComplexity": {
        "complexityThreshold": 5,
        "checkModuleBody": true
      },
      "MagicNumber": {
        "authorizedNumbers": "-1,0,1,2,443,200"
      }
    }
  }
}